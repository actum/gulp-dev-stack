<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="css/main{% if not _dev %}.min{% endif %}.css">
</head>
<body>
    {# Header #}
    {% include '../partials/header.nunj' %}
    {% block post_header %}{% endblock %}

    {# Main content of the page #}
    <main role="main">
        {% block content %}{% endblock %}
    </main>

    {# Pre-footer hook for related content (newsletters, etc.) #}
    {% block pre_footer %}{% endblock %}
    {% include '../partials/footer.nunj' %}

    {# Scripts #}
    {% if _dev %}
        <script src="js/app.js"></script>
    {% else %}
        <script src="js/app.min.js"></script>
    {% endif %}

    {# Start the application #}
    <script>app.start({});</script>
</body>
</html>
